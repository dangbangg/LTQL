@model  IEnumerable<QuanLyBanHang.Models.SanPham>
@using QuanLyBanHang.Models
@using System.Linq
@{
    ViewBag.Title = "Home Page";
}



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3" style="background-color:bisque;margin-top:5px;text-align:center;">
            <h3>@Html.DisplayFor(modelItem => item.TenSP) </h3>
            @Html.Image("../" + item.HinhSP, "alt", "200")<br />
            @Html.DisplayFor(modelItem => item.Dongia)<br />
            <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Sanphams", new {id = item.MaSP})">
                Xem chi tiết
            </a>
        </div>
    }
</div>